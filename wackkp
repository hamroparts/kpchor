  <title>Wack KP Chor</title>
  <style>
    :root { --cell: 110px; }
    body { font-family: system-ui, Arial, sans-serif; margin: 0; background:#111; color:#eee; }
    .wrap { max-width: 760px; margin: 0 auto; padding: 16px; }
    .card { background:#1b1b1b; border:1px solid #2a2a2a; border-radius:14px; padding:16px; }
    .row { display:flex; gap:12px; flex-wrap:wrap; align-items:center; justify-content:space-between; }
    .stat { display:flex; gap:14px; font-weight:700; }
    .stat span { background:#141414; border:1px solid #2a2a2a; padding:8px 10px; border-radius:10px; }
    button {
      background:#2b6cff; color:#fff; border:0; padding:10px 14px;
      border-radius:12px; font-weight:800; cursor:pointer;
    }
    button:disabled { opacity:0.5; cursor:not-allowed; }
    .grid {
      margin-top: 14px;
      display:grid;
      grid-template-columns: repeat(3, var(--cell));
      gap: 10px;
      justify-content:center;
    }
    .hole {
      width: var(--cell); height: var(--cell);
      background:#0f0f0f;
      border: 1px solid #2a2a2a;
      border-radius: 14px;
      display:flex; align-items:center; justify-content:center;
      position:relative;
      overflow:hidden;
      user-select:none;
    }
    .hole img {
      width: 88%; height: 88%;
      object-fit: contain;
      opacity: 0;
      transform: translateY(16px) scale(0.98);
      transition: 120ms ease;
      pointer-events:none;
      filter: drop-shadow(0 8px 10px rgba(0,0,0,0.35));
    }
    .hole.up img {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    .hole.hit {
      outline: 3px solid rgba(255, 214, 0, 0.75);
    }

    /* Start screen */
    .overlay {
      position:fixed; inset:0;
      display:flex; align-items:center; justify-content:center;
      background: rgba(0,0,0,0.78);
      padding: 16px;
    }
    .startbox { max-width: 520px; width: 100%; text-align:center; }
    h1 { margin: 0 0 8px; font-size: 34px; letter-spacing: 0.5px; }
    p { margin: 8px 0 14px; color:#bdbdbd; line-height: 1.35; }
    .small { font-size: 12px; color:#9a9a9a; margin-top: 10px; }
    .hint { font-size: 13px; color:#cfcfcf; margin-top: 8px; }
